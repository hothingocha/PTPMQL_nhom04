@model DemoMVC.Models.BMI

@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="Height">Chiều cao (cm):</label>
        <input type="text" class="form-control" id="Height" name="Height" asp-for="Height" />
    </div>
    <div class="form-group">
        <label for="Weight">Cân nặng (kg):</label>
        <input type="text" class="form-control" id="Weight" name="Weight" asp-for="Weight" />
    </div>
    <button type="submit" class="btn btn-primary">Tính BMI</button>
</form>

@if (ViewBag.infoPerson != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.infoPerson
    </div>
}